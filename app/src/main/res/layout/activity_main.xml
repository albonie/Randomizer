<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="209dp"
            android:layout_height="461dp"
            android:scrollbars="vertical"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/lista"
            app:layout_constraintHorizontal_bias="0.139" app:layout_constraintVertical_bias="0.066"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/imie"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="52dp"
            app:layout_constraintHorizontal_bias="0.141"/>
    <Button
            android:text="Dodaj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dodawanie"
            app:layout_constraintStart_toEndOf="@+id/imie" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.402"
            android:layout_marginBottom="52dp"/>
    <TextView
            android:layout_width="209dp"
            android:layout_height="29dp" android:id="@+id/liczbaElementow"
            app:layout_constraintBottom_toTopOf="@+id/imie"
            app:layout_constraintTop_toBottomOf="@+id/lista" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.138"
            app:layout_constraintVertical_bias="0.505"/>
    <Button
            android:text="Losuj"
            android:layout_width="88dp"
            android:layout_height="89dp" android:id="@+id/losowanie"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/liczbaElementow"
            app:layout_constraintBottom_toTopOf="@+id/dodawanie" app:layout_constraintHorizontal_bias="0.43"
            android:layout_marginBottom="20dp"/>
    <EditText
            android:layout_width="83dp"
            android:layout_height="69dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numer"
            app:layout_constraintStart_toEndOf="@+id/lista"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/losowanie"
            android:layout_marginBottom="120dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintHorizontal_bias="0.4"/>
    <TextView
            android:text="Podaj rozmiar druzyny"
            android:layout_width="80dp"
            android:layout_height="57dp" android:id="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/numer"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.818"
            app:layout_constraintStart_toEndOf="@+id/lista" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.387"/>
    <TextView
            android:text="Michał Wróbel 2020"
            android:textSize="7dp"
            android:textColor="#e3e3e3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="28dp" android:layout_marginBottom="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

</androidx.constraintlayout.widget.ConstraintLayout>